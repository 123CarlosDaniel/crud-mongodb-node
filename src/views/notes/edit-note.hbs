<div class=" col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <div class="display-6">Edit note</div>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note._id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{note.title}}"> 
                </div>
                <div class="form-group">
                    <textarea  type="text" name="description" class="form-control mt-3" style="resize:none; height :6rem" placeholder="Description" >{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block mt-3">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>